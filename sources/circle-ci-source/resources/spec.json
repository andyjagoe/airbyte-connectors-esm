{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CircleCI Spec",
    "type": "object",
    "required": [
      "token",
      "project_type",
      "org_name",
      "repo_name",
      "cutoff_days"
    ],
    "additionalProperties": false,
    "properties": {
      "token": {
        "type": "string",
        "title": "token",
        "description": "CircleCI personal API token, https://circleci.com/docs/2.0/managing-api-tokens/#creating-a-personal-api-token",
        "airbyte_secret": true
      },
      "project_type": {
        "type": "string",
        "title": "project type",
        "description": "project type, ex: github=> gh, bitbucket=>bb",
        "examples": [
          "gh",
          "bb"
        ]
      },
      "org_name": {
        "type": "string",
        "title": "organization name",
        "description": "organization name"
      },
      "repo_name": {
        "type": "string",
        "title": "repository name",
        "description": "CircleCI repository name"
      },
      "cutoff_days": {
        "type": "integer",
        "title": "Cutoff Days",
        "default": 90,
        "description": "Only fetch data updated after cutoff"
      },
      "rejectUnauthorized": {
        "type": "boolean",
        "title": "reject Unauthorized",
        "description": "CircleCI reject Unauthorized"
      },
      "url": {
        "type": "string",
        "title": "API URL",
        "description": "CircleCI API URL"
      }
    }
  }
}
